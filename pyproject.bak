[tool.poetry]
name = "horse-quant-project"
version = "0.1.0"
description = "Horse Racing ML pipeline skeleton (bootstrap stage)."
authors = ["Dylan McGuinness <dylanmcguinness0@gmail.com>"]
readme = "README.md"
packages = [{ include = "hqp", from = "src" }]

[tool.poetry.dependencies]
python = "^3.11"
PyYAML = "^6.0.2"

[tool.poetry.group.dev.dependencies]
black = "^24.8.0"
ruff = "^0.6.5"
mypy = "^1.11.2"
pytest = "^8.3.2"
pre-commit = "^3.8.0"
types-PyYAML = "^6.0.12.20240808"

[tool.pytest.ini_options]
addopts = "-q"
testpaths = ["tests"]

[tool.black]
line-length = 100
target-version = ["py311"]

[tool.ruff]
target-version = "py311"
line-length = 100
src = ["src"]
extend-select = [
  "B",
  "E","F",
  "I",
  "UP"
]
ignore = ["E203"]

[tool.mypy]
python_version = "3.11"
strict = true
ignore_missing_imports = true
warn_unused_ignores = true
warn_redundant_casts = true
warn_unreachable = true
disallow_any_generics = false
files = ["src"]
namespace_packages = true
explicit_package_bases = true

[build-system]
requires = ["poetry-core>=1.7.0"]
build-backend = "poetry.core.masonry.api"